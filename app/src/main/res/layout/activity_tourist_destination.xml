                        android:scaleType="fitXY"/>

                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="Gulmarg"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="#1584bf"
                    android:fontFamily="@font/adamina"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:fontFamily="@font/antic"
                    android:textColor="@color/black"
                    android:paddingRight="10dp"
                    android:text="Gulmarg is a town nestled in the Pir Panjal range of the Western Himalayas at an altitude of 8,690 feet above sea level. Literally translated as ‘Meadow of Flowers’ it is encased by glimmering snow peaked alps, verdant green pastures, ......">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_marginRight="10dp"
                    android:text="Read More"
                    android:layout_gravity="end"
                    android:textStyle="bold"
                    android:textColor="#1584bf"
                    android:fontFamily="@font/adamina"/>

            </LinearLayout>
            </androidx.cardview.widget.CardView>

